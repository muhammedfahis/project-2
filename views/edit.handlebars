{{#each data}}
<form action="/admin/editsave" method="POST">
  <div class="form-group">
    <label for="exampleInputEmail1">Username</label>
    <input type="text" class="form-control" name="username" value="{{this.username}}" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="username">
 
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Email</label>
    <input type="email" class="form-control" name="email" value="{{this.email}}" id="exampleInputPassword1" placeholder="email" readonly>
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">password</label>
    <input type="password" class="form-control" name="password" value="{{this.password}}" id="exampleInputPassword1" placeholder="Password">
  </div>
 

  
  
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
{{/each}}