      <div class="main">
         <div class="col-md-6 col-sm-12">
            <div class="login-form">
               <form action="/admin" method="POST">
                  <div class="form-group">
                     <label>User Name</label>
                     <input type="text" class="form-control" placeholder="User Name" name="username">
